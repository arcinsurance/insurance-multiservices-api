# Example environment configuration for CRM Insurance Multiservices backend

# Server configuration
PORT=3001
NODE_ENV=development

# Database configuration
DB_HOST=your-database-host
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=your-database-name
DB_PORT=3306

# JWT secret (required)
JWT_SECRET=your-very-secret-jwt-key

# Admin OTP override (optional)
ADMIN_EMAIL=admin@example.com
ADMIN_SECRET_CODE=123456

# Frontend URL (required for document signing links)
FRONTEND_URL=https://your-frontend-domain

# Email SMTP configuration
EMAIL_SERVICE=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# For nodemailer compatibility
EMAIL_USER=your-email-user
EMAIL_PASS=your-email-pass

# Disable email sending (set to true to disable)
DISABLE_EMAIL=false

# Enable verbose logging (set DEBUG=true to see detailed logs)
DEBUG=false